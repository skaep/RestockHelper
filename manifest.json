{
  "manifest_version": 3,
  "name": "Neopets Restock Helper",
  "version": "1.0",
  "description": "Helps you restock better by blurring trash items.",

  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon96.png",
	"96": "icons/icon128.png"
  },

  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.neopets.com/objects.phtml*",
        "https://www.neopets.com/haggle.phtml*"
      ],
      "js": ["restockhelper.js"],
      "run_at": "document_idle"
    }
  ]
}